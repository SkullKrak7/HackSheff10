{
  "dashboard": {
    "title": "Retail Odyssey - Business Metrics",
    "panels": [
      {
        "id": 1,
        "title": "Frasers Brand Mentions",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(retail_odyssey_brand_mentions[5m])",
            "legendFormat": "{{brand_name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Competitor Blocks (Total)",
        "type": "stat",
        "targets": [
          {
            "expr": "retail_odyssey_competitor_blocks"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Products Recommended",
        "type": "stat",
        "targets": [
          {
            "expr": "retail_odyssey_product_recommendations"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 4,
        "title": "User Sessions",
        "type": "stat",
        "targets": [
          {
            "expr": "retail_odyssey_user_sessions"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 4}
      },
      {
        "id": 5,
        "title": "Avg Messages Per Session",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(retail_odyssey_messages_per_session_sum[5m]) / rate(retail_odyssey_messages_per_session_count[5m])"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 4}
      },
      {
        "id": 6,
        "title": "Product Recommendations Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(retail_odyssey_product_recommendations[1m])",
            "legendFormat": "Products/min"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 7,
        "title": "Competitor Blocks Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(retail_odyssey_competitor_blocks[1m])",
            "legendFormat": "Blocks/min"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      }
    ],
    "refresh": "5s",
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "timezone": "browser"
  }
}
